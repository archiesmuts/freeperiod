<p id="notice"><%= notice %></p>

<h1>Lesson Plans</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Registration klass</th>
      <th>Term</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lesson_plans.each do |lesson_plan| %>
      <tr>
        <td><%= lesson_plan.name %></td>
        <td><%= lesson_plan.registration_klass_id %></td>
        <td><%= lesson_plan.term %></td>
        <td><%= link_to 'Show', lesson_plan %></td>
        <td><%= link_to 'Edit', edit_lesson_plan_path(lesson_plan) %></td>
        <td><%= link_to 'Destroy', lesson_plan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Lesson Plan', new_lesson_plan_path %>
