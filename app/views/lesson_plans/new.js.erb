// Add the dialog title
$('#lesson-plan-dialog h4').html("Add a Lesson Plan");

// Render the new form
$('.modal-body').html('<%= j render "lesson_plans/new_form" %>');

// Show the dynamic dialog
$('#lesson-plan-dialog').modal("show");

// Set focus to the first element
$('#lesson-plan-dialog').on('shown.bs.modal', function () {
  $('#lesson_plan_name').focus();
});
