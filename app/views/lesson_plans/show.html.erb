<% content_for :title do %>Lesson Plan Home<% end %>
<!-- school show view  -->
<!-- TODO add a tagline for Achievements Goals etc. -->
<div class="row row-offcanvas row-offcanvas-right pt-2">
  <div class="col-12 col-md-9">
    <p class="float-right d-md-none">
      <button type="button" class="btn btn-primary btn-sm" data-toggle="offcanvas">
        <%= fa_icon("th-list") %>
      </button>
    </p>
    <!-- Tab panes -->
    <div class="tab-content">
      <div class="tab-pane fade show active" id="lesson-plan-home" role="tabpanel">
        <%= render "tab_content_home" %>
      </div>

      <div class="tab-pane fade" id="lesson-plan-assessments" role="tabpanel">
        <%= render "tab_content_assessments" %>
      </div>
      <div class="tab-pane fade" id="lesson-plan-teachers-guide" role="tabpanel">
        <%= render "tab_content_teachers_guide" %>
      </div>
    </div> <!-- .tab-content -->
  </div>
  <div id="sidebar" class="col-6 col-md-3 sidebar-offcanvas pt-1 nav flex-column nav-pills" role="tablist" aria-orientation="vertical" role="tablist" aria-orientation="vertical">
    <%= render "sidebar_links" %>
  </div>
</div> <!-- .row -->

<%= render "lesson_plans/modal_dialog" %>

<!-- modal forms-->
<div class="collapse" id="add-assessment-form">
  <p><%= render "assessments/new_form" %></p>
</div>
<%= render "assessments/modal_dialog" %>
