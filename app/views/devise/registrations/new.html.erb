<div class="container">

  <h2>Sign up</h2>

  <div class="row">
    <div class="col-md-6">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group">
        <%= f.label :first_name %><br />
        <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :last_name, "Surname ( Last name )" %><br />
        <%= f.text_field :last_name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
      </div>

      <div class="alert alert-info">
        <h4>Agree to the Terms of Privacy Statement</h4>
        <%= f.label :terms_of_privacy_statement, "Check box to accept Terms"%>&nbsp;
        <%= f.check_box :terms_of_privacy_statement %><br>
        By providing the information above (your personal data), you agree that the ....
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class: "btn btn-primary" %>
      </div>
      <% end %>

    </div>
    <div class="col-md-6">
      <div class="alert alert-block alert-warning">
        <h4 class="alert-heading">Privacy Notice!</h4>
        Before proceeding please take the time to read the
          <%= link_to "Legal Notice", page_path('legal_notice'), class: "alert-link"  %> and
          <%= link_to "Privacy Policy", page_path('privacy_policy'), class: "alert-link" %> related to this site.
        You can also <a href="#" class="alert-link" data-toggle="modal" data-target="#privacyModal">read more here</a>
        on what other information we collect about your Organisation.
      </div>
      <h3>Don't want to sign up?</h3>
      <p>
        <%= render "devise/shared/links" %>
      </p>
    </div>
  </div>
</div>

<!-- Modal code for Privacy Information -->
<%= render "devise/registrations/privacy_modal" %>
