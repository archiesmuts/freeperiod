<% content_for :title do %>Goal and Action plans<% end %>
<div class="row row-offcanvas row-offcanvas-right mt-1">
  <div class="col-12 col-md-9">
    <p class="float-right d-md-none">
      <button type="button" class="btn btn-primary btn-sm" data-toggle="offcanvas">
        <%= fa_icon("th-list") %>
      </button>
    </p>
    <!-- Tab panes -->
    <div class="tab-content">
      <div class="tab-pane fade show active" id="goal-home" role="tabpanel">
        <%= render "tab_content_home" %>
      </div>

      <div class="tab-pane" id="goal-action-plans" role="tabpanel">
        <%= render "tab_content_action_plans" %>

      </div>
      <div class="tab-pane" id="goal-comments" role="tabpanel">
        <%= render "tab_content_comments" %>

      </div>

    </div> <!-- .tab-content -->
  </div><!-- .col-12 .col-md-9-->
  <div id="sidebar" class="col-6 col-md-3 sidebar-offcanvas pt-1 nav flex-column nav-pills" role="tablist" aria-orientation="vertical" role="tablist" aria-orientation="vertical">
      <%= render "sidebar_links" %>
  </div><!-- #sidebar -->
</div> <!-- .row -->
<%= render "goals/modal_dialog" %>
<%= render "action_plans/modal_dialog" %>
<%= render "action_plans/how_to_action_plan" %>
