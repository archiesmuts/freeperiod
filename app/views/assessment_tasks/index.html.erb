<div class="container">
  <h1>Assessment Tasks</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Assessment type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assessment_tasks.each do |assessment_task| %>
      <tr>
        <td><%= assessment_task.name %></td>
        <td><%= assessment_task.assessment_type.name %></td>
        <td><%= link_to 'Show', assessment_task %></td>
        <td><%= link_to 'Edit', edit_assessment_task_path(assessment_task) %></td>
        <td><%= link_to 'Destroy', assessment_task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Assessment Task', new_assessment_task_path %>
</div>
