<div class="container">
  <div class="row">
    <div class="col-md">
      <div id="assessment-card-<%= @assessment.id %>" class="card border-primary my-3">
        <h5 class="card-header"><%= fa_icon "check" %>&nbsp;Assessment</h5>
        <div class="card-body text-primary">
          <h4 class="card-title"><%= @assessment.name %></h4>
          <h6 class="card-subtitle mb-2 text-muted">Lesson Plan: <%= @assessment.lesson_plan_name %></h6>
          <p class="card-text">
            Assessment Value: <%= @assessment.value %>  Sum of parts:&nbsp;<span id="totalValue"></span>
          </p>
        </div>
        <div class="card-footer">
          <div class="d-flex justify-content-between">
            <%= link_to [@lesson_plan.registration_klass, @assessment.lesson_plan],
              class: "btn btn-sm btn-outline-primary" do %>
              <%= fa_icon "arrow-left" %>&nbsp;Lesson plan
            <% end %>
            <%= link_to edit_lesson_plan_assessment_path(@assessment.lesson_plan, @assessment),
              remote: true, class: "btn btn-sm btn-primary" do %>
              <%= fa_icon "edit" %>&nbsp;Edit assessment
            <% end %>
          </div>
        </div>
      </div> <!-- #assessment-card -->
      <!-- list assessment parts here -->
      <div class="card border-primary my-3">
        <h5 class="card-header">
          <div class="d-flex justify-content-between">
            <div>
              <%= fa_icon "check-circle-o" %>&nbsp;<strong>Assessment parts</strong>
            </div>
            <div>
              <%= link_to new_assessment_part_path(@assessment), remote: true,
                class: "btn btn-sm btn-primary" do %>
                <%= fa_icon "plus-square" %>&nbsp;Add a part
              <% end %>
            </div>
          </div>
        </h5>
        <ul id="list-parts" class="list-group">
          <% if @assessment.parts.any? %>
            <%= render @assessment.parts %>
          <% else %>
            <li class="list-group-item list-group-item-info no-parts-to-list">
              No assessment parts to list
            </li>
          <% end %>
        </ul>
      </div>
    </div> <!-- .col-md-8 -->

    <div class="col-md">
      <!-- list assessment results here -->
      <div class="card border-primary my-3">
        <h5 class="card-header">
          <div class="d-flex justify-content-between">
            <div>
              <%= fa_icon "check-circle-o" %>&nbsp;<strong>Results</strong>
            </div>
            <div>
              <%= link_to new_assessment_result_path(@assessment), remote: true, class: "btn btn-sm btn-primary" do %>
                <%= fa_icon "plus-square" %>&nbsp;Add a Student's result
              <% end %>
            </div>
          </div>
        </h5>
        <ul id="list-results" class="list-group">
          <% if @assessment.results.any? %>
            <%= render @assessment.results %>
          <% else %>
            <li class="list-group-item list-group-item-info no-assessment-parts-to-list">
              No assessment results to list
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div> <!-- .row -->

</div>
<%= render "assessments/modal_dialog" %>
<!-- modal forms parts-->
<div class="collapse" id="add-part-form">
  <p><%= render "parts/new_form" %></p>
</div>
<%= render "parts/modal_dialog" %>

<!-- modal forms results-->
<div class="collapse" id="add-result-form">
  <p><%= render "results/new_form" %></p>
</div>
<%= render "results/modal_dialog" %>
