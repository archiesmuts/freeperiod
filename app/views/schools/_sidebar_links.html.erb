    <span class="app-menu__label">
      Contact details <span id="sizeAddresses2" class="badge badge-info"></span>
    </span>
  </a>
</li>

<li>
  <%= link_to current_user, class: "app-menu__item", aria: {selected: false}  do %>
    <%= fa_icon "fw smile", class: "app-menu__icon mr-2"%>
    <span class="app-menu__label">
      My page
    </span>
  <% end %>
</li>
