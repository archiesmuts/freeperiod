    <%= fa_icon("graduation-cap fw", class: "app-menu__icon mr-2") %>
    <span class="app-menu__label">
      Classes
    </span>
  </a>
</li>

<li>
  <a class="app-menu__item" id="school-goals-tab" data-toggle="pill" href="#school-goals" role="tab" aria-controls="school-goals" aria-selected="false">
    <%= fa_icon("star fw", class: "app-menu__icon mr-2") %>
    <span class="app-menu__label">
      Our Goals&nbsp;<span id="sizeGoals2" class="badge badge-info"></span>
    </span>
  </a>
</li>
<li>
  <a class="app-menu__item" id="school-achievements-tab" data-toggle="pill" href="#school-achievements" role="tab" aria-controls="school-achievements" aria-selected="false">
    <%= fa_icon("trophy fw", class: "app-menu__icon mr-2") %>
    <span class="app-menu__label">
      Our Achievements&nbsp;<span id="sizeAchievements2" class="badge badge-info"></span>
    </span>
  </a>
</li>
<li>
  <a class="app-menu__item" id="school-events-tab" data-toggle="pill" href="#school-events" role="tab" aria-controls="school-events" aria-selected="false">
