<%= form_with scope: :membership, url: edit_multiple_school_memberships_path(@school), method: :get,  local: true  do %>
  <div class="row">
    <div class="col-md-10">
      <table class="table">
        <thead>
          <tr>
            <th>Name and Email</th>
            <th>
              Edit&nbsp;<%= fa_icon("check-square", text: "Selected", data: {toggle: "tooltip", placement: "top"},
                title:"Click check boxes to edit multiple records") %>
            </th>
            <th>Role</th>
            <th>Grade</th>
            <th>Confirmed</th>
            <th>Show card</th>
          </tr>
        </thead>
        <tbody id="list-members">
            <%= render "schools/memberships/membership" %>
        </tbody>
      </table>
    </div>
    <div class="col-md-2">
      <%= submit_tag "Edit selected records", class: "btn btn-sm btn-primary" %>
    </div>
  </div>
<% end %>
