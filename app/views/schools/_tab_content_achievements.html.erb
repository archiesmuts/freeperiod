<div class="app-title" aria-label="breadcrumb">
  <div>
    <h1 class="h2"><%= fa_icon("trophy", text: "Our Achievements") %></h1>
    <p>Start a beautiful journey here</p>
  </div>
  <ul class="app-breadcrumb breadcrumb">
    <li class="breadcrumb-item"><a href="#"><%= fa_icon("home lg", text: "School Home") %></a></li>
    <li class="breadcrumb-item active" aria-current="page">School Achievements</li>
  </ul>
</div>

<div class="jumbotron">
  <div class="col-xl-10 offset-xl-1">
    <h1>
      Celebrating our achievements&nbsp;
      <small><span class="badge badge-info" id="sizeAchievements1"></span></small>
    </h1>
    <p class="lead">Celebrate our achievements together ...</p>
    <hr>
    <%= link_to new_school_achievement_path(@school), remote: true, class: "btn btn-lg btn-primary btn-block-xs" do %>
      <%= fa_icon("plus", text: "Add an Achievement") %>
    <% end %>
  </div>
</div>

<div class="d-flex flex-wrap justify-content-start align-items-stretch" id="list-achievements">
  <% if @school.achievements.any? %>
    <%= render "achievements/achievements", achievable: @school %>
  <% else %>
    <%= render "achievements/achievement_placeholder" %>
  <% end %>
</div> <!-- .card-deck -->
