<%= form_with(model: [@achievable, @achievement], id: :edit_achievement, class: :edit_achievement) do |form| %>
  <div class="errors"> </div>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, id: :achievement_title, class: "form-control", placeholder: "A headline title" %>
  </div>
  <div class="row">
    <div class="col-sm-8">
      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_area :description, id: :achievement_description, class: "form-control", placeholder: "Provide more details" %>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="form-group">
        <%= form.label :date %>
        <%= form.text_field :date, id: :achievement_date, class: "form-control", placeholder: "When dit it happen?" %>
      </div>
    </div>
  </div>
  <!-- link_generator in helper module  -->
  <div class="actions">
    <%= link_to achievement.achievable, class: "btn btn-outline-primary" do %>
      <%= fa_icon("times", text: "Cancel") %>
    <% end %>
    <%= form.submit class: "btn btn-sm btn-primary"  %>
  </div>
<% end %>
