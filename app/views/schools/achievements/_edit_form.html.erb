<%= form_with(model: [@achievable, achievement], local: true) do |form| %>
  <% if achievement.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(achievement.errors.count, "error") %> prohibited this achievement from being saved:</h2>

      <ul>
      <% achievement.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, id: :achievement_title, class: "form-control", placeholder: "A headline title" %>
  </div>
  <div class="row">
    <div class="col-sm-8">
      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_area :description, id: :achievement_description, class: "form-control", placeholder: "Provide more details" %>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="form-group">
        <%= form.label :date %>
        <%= form.text_field :date, id: :achievement_date, class: "form-control datepicker", placeholder: "When dit it happen?" %>
      </div>
    </div>
  </div>
  <!-- link_generator in helper module  -->
  <div class="actions">
    <%= link_to achievement.achievable, class: "btn btn-outline-primary" do %>
      <%= fa_icon("times", text: "Cancel") %>
    <% end %>
    <%= form.submit class: "btn btn-sm btn-primary"  %>
  </div>
<% end %>
