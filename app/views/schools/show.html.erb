<div class="row">
  <div class="col-sm-6  pt-3">
    <div class="card bg-dark text-dark">
    <img class="card-img-top image-fluid" src="http://placehold.it/788x270" srcset="http://placehold.it/788x270 270w" sizes="100vw" alt="Placeholder" />
    <div class="card-img-overlay">
      <h4 class="card-title"><%= fa_icon "university" %>&nbsp;<%= @school.name %></h4>
      <p class="card-text">This is a wider card with supporting text below as a natural lead-in to additional content. This content is a little bit longer.</p>
      <p class="card-text">Last updated 3 mins ago</p>
      <div class="d-flex justify-content-between">
        <div>
          <%= link_to current_user, class: "btn btn-sm btn-outline-primary" do %>
            <%= fa_icon "smile-o" %>&nbsp;Back to my page
          <% end %>
        </div>
        <div>
          <%= link_to 'Edit details', edit_school_path(@school), class: "btn btn-sm btn-primary" %>
        </div>
      </div>

    </div>
  </div> <!-- .card  school show -->
  <div class="card mt-2"> <!-- achievements -->
    <div class="card-body">
      <h4 class="card-title">Achievements</h4>
      <p class="card-text">Achievements</p>
    </div>
    <div class="card-footer">
      <div class="row">
        <div class="col-sm">
            <%= link_to "#collapseAchievements", class: "btn btn-sm btn-outline-success btn-block",
                data: { toggle: "collapse" }, aria: {expanded: false} do %>
                <%= fa_icon("trophy", text: "My Achievements") %>&nbsp;
                <span class="badge badge-success"><%= @school.achievements.size %></span>
            <% end %>
        </div>
      </div> <!-- .row in card-footer -->
        <!-- list achievements here -->
      <div class="collapse" id="collapseAchievements">
        <ul id="list-achievements" class="list-group py-2">
          <% if @school.achievements.any? %>
            <%= render "achievements/achievements", achievable: @school %>
          <% else %>
            <li class="list-group-item list-group-item-info no-achievements-to-list">
              Nothing to list. Complete the form below
            </li>
          <% end %>
        </ul>
        <%= link_to "#collapseAchievementForm", class: "btn btn-sm btn-success btn-block py-1",
            data: { toggle: "collapse" }, aria: {expanded: false} do %>
            <%= fa_icon("plus-square", text: "Add an Achievement") %>
            <% end %>
        <div class="collapse py-2" id="collapseAchievementForm">
          <%= render "achievements/new_form", achievable: @school %>
        </div><!-- .collapse achievement form -->
      </div> <!-- .collapse achievements in card-footer -->
    </div> <!-- .card-footer -->
  </div>
    <div class="card mt-2"> <!-- card 1/3 -->
      <div class="card-body">
        <h4 class="card-title">School Events</h4>
        <p class="card-text">School Events</p>
        <%= link_to 'School Events', school_events_path(@school), class: "btn btn-sm btn-primary" %>
      </div>
    </div><!-- .card events-->
    <div class="card mt-2"> <!-- card 3/3 -->
      <div class="card-body">
        <h4 class="card-title">Fees</h4>
        <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
        <%= link_to "View List of school fees", school_fees_path(@school), class: "btn btn-primary" %>
      </div>
    </div> <!-- .card fees -->
    <div class="card mt-2">
      <div class="card-body">
        <h4 class="card-title"><%= fa_icon "users" %>&nbsp;Staff and Students</h4>
        <p class="card-text">Number of users: <span class="badge badge-info"><%= @school.users.size %></span></p>
          <%= link_to "View all registered users", school_memberships_path(@school), class: "btn btn-primary btn-sm" %>
      </div>
    </div> <!-- .card Staff and Students -->
    <div class="card mt-2">
      <div class="card-body">
        <h4 class="card-title"><%= fa_icon "graduation-cap" %>&nbsp;Registration and Subject Classes</h4>
        <p class="card-text">Number of Registration Classes: <span class="badge badge-info"><%= @school.registration_klasses.registration_class.size %></span></p>
        <p class="card-text">Number of Subject Classes: <span class="badge badge-info"><%= @school.registration_klasses.subject_class.size %></span></p>
          <%= link_to "View all Registration and Subject Classes", school_registration_klasses_path(@school),
              class: "btn btn-sm btn-primary" %>
      </div>
    </div> <!-- .card Classes-->
    <div class="card mt-2">
      <div class="card-body">
        <h4 class="card-title"><%= fa_icon "graduation-cap" %>&nbsp;School Goals</h4>
        <p class="card-text">Number of Goals <span class="badge badge-info"><%= @school.goals.size %></span></p>
          <%= link_to "View List of School Goals", school_goals_path(@school),
              class: "btn btn-sm btn-primary" %>
      </div>
    </div> <!-- .card Goals-->
    <div class="card mt-2">
