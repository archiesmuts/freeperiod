<div class="mt-1">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <a href="#">School home</a>
      </li>
      <li class="breadcrumb-item active" aria-current="page">School Goals and Action Plans</li>
    </ol>
  </nav>
</div>
<div class="jumbotron mt-1">
  <div class="col-xl-10 offset-xl-1">
    <h1 class="text-white"><%= fa_icon("star", text: "Our Goals and Action Plans") %>&nbsp;
      <small><span class="badge badge-info" id="sizeGoals1"></span></small>
    </h1>
    <p class="lead">Say something about creating goals</p>
    <hr>
    <%= link_to new_school_goal_path(@school), remote: true, class: "btn btn-lg btn-primary btn-block-xs" do %>
      <%= fa_icon("plus", text: "Add a School Goal") %>
    <% end %>
  </div>
</div>

<div class="row d-flex flex-wrap" id="list-goals">
    <% if @school.goals.any? %>
      <%= render "goals/goals", goalable: @school %>
    <% else %>
      <li class="list-group-item list-group-item-info no-goals-to-list">
        Nothing to list
      </li>
    <% end %>
</div>
