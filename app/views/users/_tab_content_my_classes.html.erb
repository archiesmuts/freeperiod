<div class="mt-1">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item"><a href="#">Home</a></li>
      <li class="breadcrumb-item active" aria-current="page">My Registration & Subject Classes</li>
    </ol>
  </nav>
</div>
<div class="jumbotron mt-1">
  <div class="row">
    <div class="col-xl-10 offset-xl-1">
      <h1 class="text-white">
        My Registration and Subject Classes&nbsp;
        <small><span class="badge badge-info"><%= current_user.registration_klasses.size %></span></small>
      </h1>
    </div>
  </div>
</div>
<div id="list-registration-klasses">
  <% if @current_user.registration_klasses.any? %>
    <div class="row d-flex flex-wrap" id="list-registration-klasses">
      <%= render @current_user.registration_klasses %>
    </div>
    <% else %>
    <div class="row d-flex flex-wrap">
      <%= render "registration_klass_placeholder" %>
    </div>
  <% end %>
</div>
