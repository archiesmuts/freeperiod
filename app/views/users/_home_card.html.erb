<div class="row">
  <div class="hide-xs col-md-2">
    <div class="card mb-1">
      <img data-src="holder.js/200x200?auto=yes&random=yes&textmode=exact" class="card-img image-fluid mb-1">
    </div>

  </div>
  <div class="hide-xs col-md-2">
    <div class="card mb-1">
      <%= image_tag "placeholder_user.png",
                    alt: "Headshot",
                    id: "headshot",
                    class: "card-img image-fluid mb-1" %>
    </div>

  </div>
  <div class="col-12 col-md-8">
    <div class="card bg-dark text-white">
      <div class="card-body">
        <h4 class="card-title">
          <%= current_user.first_name if current_user.first_name %>
          <%= current_user.last_name if current_user.last_name %>
        </h4>
        <h6 class="card-subtitle mb-2 text-muted">
          <span class="hide-xs"><%= fa_icon "envelope" %>&nbsp;<%= current_user.try(:email) %></span>
        </h6>
        <p class="card-text"> </p>
        <p class="card-text">Last updated 3 mins ago</p>
      </div>
    </div>
  </div>

  <div class="col-12">
      <span class="hide-sm-up"><%= fa_icon "envelope" %>&nbsp;<%= current_user.try(:email) %></span>
  </div>
</div> <!-- .row home-card -->
<div class="row">
  <div class="col-sm-2">

    <div class="col-sm-10" id="create-school-account">
      <% if current_user.memberships.empty? %>
        <%= link_to "Create your School Account", new_membership_path(current_user), class: "btn btn-success" %>
        <%= render "nothing_to_list" %>
        <%= link_to 'New School', new_school_path, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
