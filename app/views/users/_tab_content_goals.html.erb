<div class="app-title" aria-label="breadcrumb">
  <div>
    <h1 class="h2">
      <%= fa_icon("star", text: "My Personal Goals") %>&nbsp;
      <small>
        <span id="sizeGoals1" class="badge badge-info"></span>
      </small>
    </h1>
    <p>Monitor, Evaluate and Improve</p>
  </div>
  <ul class="app-breadcrumb breadcrumb">
    <li class="breadcrumb-item"><a href="#"><%= fa_icon("home lg", text: "Home") %></a></li>
    <li class="breadcrumb-item active" aria-current="page">My Personal Goals</li>
  </ul>
</div>

<div class="d-flex flex-wrap align-items-stretch" id="list-goals">
  <% if current_user.goals.any? %>
    <div class="card border-success mb-1 mr-1 scale" style="width: 21rem;">
      <div class="card-header">
        Create a New Goal
      </div>
      <div class="card-body">
        <h4 class="card-title ">
          My Goals and Action Plans
        </h4>
        <h5 class="card-subtitle">
          Achieve something by setting a goal with clear action plans.
        </h5>
        <p class="card-text text-info">
          Set Goals that are Specific, Measurable, Achieveable, Realistic and Timely.
        </p>
      </div>
      <div class="card-footer">
        <%= link_to new_user_goal_path(current_user), remote: true, class: "btn btn-lg btn-success btn-block" do %>
        <%= fa_icon("plus-square", text: "Create a New Goal") %>
        <% end %>
      </div>
    </div>
    <%= render "goals/goals", goalable: @user %>
  <% else %>
    <%= render "goals/goal_placeholder" %>
  <% end %>
</div>
