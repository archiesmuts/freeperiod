<%= form_with(model: [@school, @event], method: :patch,  id: :edit_event, class: :edit_event) do |form| %>

  <h4><%= @school.name %></h4>
  <div class="errors"> </div>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, id: :event_title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, id: :event_description, class: "form-control" %>
  </div>

  <div class="row">
    <div class='col-sm-6'>
        <div class="form-group">
          <%= form.text_field :start_time, id: :event_start_time, class: "form-control"   %>
        </div>
    </div>
    <div class='col-sm-6'>
        <div class="form-group">
            <%= form.text_field :end_time, id: :event_end_time, class: "form-control"   %>
        </div>
    </div>
  </div> <!-- .row datetimepicker -->
  
  <div class="modal-footer">
    <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Cancel</button>
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
