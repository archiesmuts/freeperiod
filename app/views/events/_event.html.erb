<li class="list-group-item">
  <%= link_to event.title, school_event_path(event.school, event) %>,
  <%= event.start_time.strftime("%I:%M%p on %a %d %b %Y") %> to
  <%= event.end_time.strftime("%I:%M%p on %a %d %b %Y") %><br />
  <div class="d-flex justify-content-between">
    <%= link_to edit_school_event_path(event.school, event), remote: true do %>
          <%= fa_icon "pencil" %>&nbsp;Edit
        <% end %>
    <%= link_to [event.school, event], method: :delete,
        data: { confirm: 'Are you sure?' } do %>
          <%= fa_icon "trash" %>&nbsp;Delete
        <% end %>
    </div>
</li>
