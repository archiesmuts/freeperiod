<div  class="card border-primary mb-3" id="event-card-<%= event.id %>">
  <div class="card-body text-dark">
    <h5 class="card-title">
      <%= fa_icon "fort-awesome" %>&nbsp;<%= event.title %>
    </h5>
    <p class="card-text">
      <% if event.start_weekday == event.end_weekday %>
      <%= event.start_time.strftime("%I:%M%p") %>&nbsp;to
      <%= event.end_time.strftime("%I:%M%p on %a %d %b") %>
      <% else %>
      <%= event.start_time.strftime("%I:%M%p on %a %d %b") %>to<br>
      <%= event.end_time.strftime("%I:%M%p on %a %d %b") %>
      <% end %>
      <br>
      <small><%= fa_icon("comment-o", text:"Comments") %></small>&nbsp;
      <span class="badge badge-info"><%= event.comments.size %></span>&nbsp;
      <%= link_to "#", data:  {toggle: "tooltip", placement: "top"},
          title: "Click on show more to add comments" do %>
          <%= fa_icon("info-circle") %>
      <% end %>
    </p>

  </div>
  <div class="card-footer">
    <div class="d-flex justify-content-between">
      <div class="">
        <%= link_to school_event_path(event.school, event), class: "btn btn-sm btn-link" do %>
          <span class="text-primary"><%= fa_icon "crosshairs" %>&nbsp;Show more...</span>&nbsp;
        <% end %>

      </div>

      <%= link_to [event.school, event], method: :delete,
          data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-link" do %>
            <span class="text-danger"><%= fa_icon "trash" %>&nbsp;Delete</span>
          <% end %>
    </div>
  </div>
</div>
