<%= form_with(model: [@school, Event.new], id: :new_event, class: :new_event) do |form| %>

  <h4><%= @school.name %></h4>
  <div class="errors"> </div>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title, id: :event_title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description, id: :event_description, class: "form-control" %>
  </div>
  <div class="row">
    <div class='col-sm-6'>
        <div class="form-group">
          <%= form.label :start_time, "Start Date & Time" %>
          <%= form.text_field :start_time, id: :event_start_time, class: "form-control", placeholder: "Start date and time" %>
        </div>
    </div>
    <div class='col-sm-6'>
        <div class="form-group">
          <%= form.label :start_time, "End Date & Time" %>
            <%= form.text_field :end_time, id: :event_end_time, class: "form-control", placeholder: "End date and time" %>
        </div>
    </div>
  </div> <!-- .row datetimepicker -->

  <div class="modal-footer">
    <button type="button" class="btn btn-outline-primary" data-dismiss="modal">
      <%= fa_icon("times", text: "Cancel") %>
    </button>
    <%= form.submit class: "btn btn-primary"%>
  </div>
<% end %>
