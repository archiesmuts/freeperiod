<%= form_with(model: [@school, Event.new], id: :new_event, class: :new_event) do |form| %>

  <div class="errors"></div>

  <div class="form-group">
    <%= form.label :title, "Headline title" %>
    <%= form.text_field :title, id: :event_title, class: "form-control", placeholder: "Give it a headline title" %>
  </div>

  <div class="form-group">
    <%= form.label :description, "Provide a more detailed description of the event" %>
    <%= form.text_area :description, id: :event_description, class: "form-control" %>
  </div>
  <!-- <trix-editor class="trix-bg" input="event_description"></trix-editor> -->
<!-- FIXME trix editor not working in bootstrap modal -->
  <div class="row">
    <div class='col-sm-6'>
        <div class="form-group">
          <%= form.label :start_time, "Start Date & Time" %>
          <%= form.text_field :start_time, id: :event_start_time, class: "form-control event_start_time", placeholder: "Start date and time" %>
        </div>
    </div>
    <div class='col-sm-6'>
        <div class="form-group">
          <%= form.label :start_time, "End Date & Time" %>
            <%= form.text_field :end_time, id: :event_end_time, class: "form-control event_end_time", placeholder: "End date and time" %>
        </div>
    </div>
  </div> <!-- .row datetimepicker -->

  <div class="modal-footer">
    <button type="button" class="btn btn-lg btn-outline-primary" data-dismiss="modal" id="createEvent">
      <%= fa_icon("times", text: "Cancel") %>
    </button>
    <%= form.submit class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
