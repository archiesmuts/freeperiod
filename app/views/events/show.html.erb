<!-- Event show page -->
<div class="container">
  <div class="row d-flex justify-content-center">
    <div class="col-md-6">
      <div id="event-card-<%= @event.id %>">
        <div class="card border-primary my-3">
          <h5 class="card-header"><%= fa_icon "fort-awesome" %>&nbsp;School Event</h5>
            <div class="card-body text-primary">
            <h4 class="card-title"><%= @event.title %></h4>
            <h6 class="card-subtitle mb-2 text-muted"> <%= @event.school_name %></h6>
            <p class="card-text">
              <%= @event.description %>
            </p>
            <p class="card-text">Start time: <%= @event.start_time.strftime("%I:%M%p on %a %d %b %Y") %></p>
            <p class="card-text">End time: <%= @event.end_time.strftime("%I:%M%p on %a %d %b %Y") %></p>
            <div class="d-flex justify-content-between">
              <%= link_to  school_events_path(@school),
                  class: "btn btn-outline-primary" do %>
                  <%= fa_icon "arrow-left" %>&nbsp;Back to Calendar
                  <% end %>

              <%= link_to edit_school_event_path(@event.school, @event),
                  remote: true, class: "btn btn-primary" do %>
                    <%= fa_icon "pencil-square-o" %>&nbsp;Edit Event
                  <% end %>
            </div>
          </div>
        </div>
      </div><!-- #event-card -->
    </div> <!-- .col-md -->
  </div>
</div>
