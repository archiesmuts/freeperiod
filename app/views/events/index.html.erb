<% content_for :title do %>Calendar of Events <% end %>
<div class="mt-1">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <%= link_to @school do %>
          <%= fa_icon "arrow-left", text: "School home" %>&nbsp;
        <% end %>
      </li>
      <li class="breadcrumb-item active" aria-current="page">School Events Calendar</li>
    </ol>
  </nav>
</div>
<div class="row">
  <div class="col-md-8 col-lg-6 col-xl-6 offset-xl-2">
    <h1 >
    Upcoming School Events&nbsp;<small><span class="badge badge-info"><%= @school.events.newer_than(1.day.ago).size %></small></span>
    </h1>
  </div>
  <div class="col-md-4 col-lg-2 col-xl-2">
    <%= link_to new_school_event_path(@school),
      class: "btn btn-lg btn-primary btn-block-xs" do %>
      <%= fa_icon "calendar-plus-o", text: "Create an Event" %>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-xl-8 offset-xl-2">
    <div id="event_calendar" class="py-2"> </div>
  </div>
</div>

<%= render "modal_dialog" %>
<%= render "full_calendar_modal" %>
