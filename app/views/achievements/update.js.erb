var el = $('.edit_achievement');

<% if @achievement.errors.any? %>

  // Create a list of errors
  var errors = $('<ul class="list-group" />');

  <% @achievement.errors.full_messages.each do |error| %>
    errors.append('<li class="list-group-item list-group-item-danger"><%= j error %></li>');
  <% end %>

  // Display errors on form
  el.find('.errors').html(errors);

<% else %>

$("#<%= dom_id(@achievement) %>").detach();
$('#list-achievements').prepend('<%= j render @achievement %>');
$("#<%= dom_id(@achievement) %>").hide().fadeIn(1000);
$('#achievement-dialog').modal("hide");

// Clear form
el.find('input:text,text_area').val('');
el.find('.errors').empty();

<% end %>
