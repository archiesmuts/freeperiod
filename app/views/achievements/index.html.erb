<p id="notice"><%= notice %></p>

<h1>Achievements</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Date</th>
      <th>Slug</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @achievable.achievements.each do |achievement| %>
      <tr>
        <td><%= achievement.title %></td>
        <td><%= achievement.description %></td>
        <td><%= achievement.date %></td>
        <td><%= achievement.slug %></td>
        <td><%= link_to 'Show', achievement %></td>
        <td><%= link_to 'Edit', edit_achievement_path(achievement) %></td>
        <td><%= link_to 'Destroy', achievement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Achievement', new_polymorphic_path(@achievable) %>
