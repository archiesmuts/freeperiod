<div id="<%= dom_id(result) %>" class="col-md-4 result-card" >
  <div class="card text-white bg-dark mb-3">
    <div class="card-header"><%= fa_icon("check-circle-o", text: "Learner Result") %></div>
    <div class="card-body">
      <h5 class="card-title"><%= fa_icon("user-circle-o") %>&nbsp;<%= result.user_registration.user_name %></h5>
      <p class="card-text"><%= fa_icon("check-square") %>&nbsp;<%= result.assessment.name %></p>
      <p class="card-text">
        <span class="badge badge-secondary">Goal: 15</span>
      </p>
      <p class="card-text">
         <span class="badge badge-info"><%= result.student_score %>/ <%= result.assessment.value %></span>
      </p>
      <p class="card-text">
        <% if result.teacher_comment %>
          <%= fa_icon "comment" %>&nbsp;<%= result.teacher_comment %>
        <% else %>
          <%= fa_icon "comment-o", text: "No comments yet" %>
        <% end %>
      </p>
    </div>
    <div class="card-footer">
      <div class="row">
        <div class="col-md-4">
          <%= link_to [result.assessment, result], method: :delete, remote: true,
            data: { confirm: 'Delete! Are you absolutely sure?' },
            class: "btn btn-sm btn-danger delete-result" do %>
            <%= fa_icon("trash", text: "Delete") %>
          <% end %>
        </div>
        <div class="col-md-4">
          <%= link_to edit_assessment_result_path(result.assessment, result), remote: true,
            class: "btn btn-sm btn-primary" do %>
            <%= fa_icon("pencil-square", text: "Edit") %>
          <% end %>
        </div>
        <div class="col-md-4">
          <%= link_to [result.assessment, result], class: "btn btn-sm btn-primary" do %>
          <%= fa_icon "angle-double-right", text: "Show" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

</div>
