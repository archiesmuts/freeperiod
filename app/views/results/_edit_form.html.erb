<%= form_with(model: [@result.assessment, @result], method: :patch, id: :edit_result, class: :edit_result) do |form| %>

  <p>
    <strong>
      <%= @result.assessment.name %>. Value: <%=  @result.assessment.value  %>
    </strong>
  </p>

  <div class="errors"></div>

  <div class="form-group user-registration-id">
    <%= form.label :user_registration_id, "Name of Learner", class: "form-label" %>
    <%= form.text_field :user_registration_id, id: :user_name, class: "form-control" %>
  </div>
  <div class="form-group row">
    <%= form.label :student_score, class: "col-sm-5 col-form-label" %>
    <div class="col-sm-3">
      <%= form.number_field :student_score, id: :result_student_score, class: "form-control result_student_score " %>
    </div>
  </div>
  <!-- TODO add conditional to show goal to learner only and vice versa for the rest of the content -->
  <div class="form-group row">
    <label for="goalValue" class="col-sm-5 col-form-label">My Goal - "dummy data"</label>
    <div class="col-sm-3">
      <input type="number" class="form-control" id="inputGoalValue" placeholder="15">
    </div>
  </div>
  <div class="form-group">
    <%= form.label :teacher_comment %>
    <%= form.text_area :teacher_comment, id: :result_teacher_comment, class: "form-control" %>
  </div>
  <div class="actions">
    <button type="button" class="btn btn-l btn-outline-primary" data-dismiss="modal" id="editResult">Cancel</button>
    <%= form.submit class: "btn btn-lg btn-primary" %>
  </div>

<% end %>
