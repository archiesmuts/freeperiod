var el = $('.edit_attendance');

<% if @attendance.errors.any? %>

  // Create a list of errors
  var errors = $('<ul class="list-group" />');

  <% @attendance.errors.full_messages.each do |error| %>
    errors.append('<li class="list-group-item list-group-item-danger"><%= j error %></li>');
  <% end %>

  // Display errors on form
  el.find('.errors').html(errors);

<% else %>

$('#attendance-dialog').modal("hide");
$("#attendance-<%= @attendance.id %>").fadeOut(700, function() {
  this.remove();
  $('#list-attendances').append('<%= j render @attendance %>');
});

// Clear form
el.find('input:text,text_area').val('');
el.find('.errors').empty();

<% end %>
