<%= form_with(model: [@attendable, Attendance.new], id: :new_attendance, class: :new_attendance) do |form| %>


  <div class="form-group">
    <%= form.label :date %>
    <%= form.date_select :date, id: :attendance_date, class: "form-control" %>
  </div>
  <div class="errors"></div>

  <div class="form-group">
    <%= form.label :comment %>
    <%= form.text_area :comment, id: :attendance_comment, class: "form-control", placeholder: "Write a comment" %>
  </div>

  <div class="modal-footer">
    <button type="button" class="btn btn-outline-primary" data-dismiss="modal" id="createPart">Cancel</button>
    <%= form.submit class: "btn btn-primary" %>
  </div>

<% end %>
