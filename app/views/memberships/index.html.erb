<h1>Memberships</h1>

<%= link_to 'New Membership', new_membership_path, class: "btn btn-primary my-2" %>

<table class="table">
  <thead>
    <tr>
      <th>User</th>
      <th>school</th>
      <th>Member</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @memberships.each do |membership| %>
      <tr>
        <td><%= membership.user.name_reversed %></td>
        <td><%= membership.school.name if membership.school %></td>
        <td><%= membership.member.humanize %></td>
        <td><%= link_to 'Show', membership %></td>
        <td><%= link_to 'Edit', edit_membership_path(membership) %></td>
        <td><%= link_to 'Destroy', membership, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Membership', new_membership_path, class: "btn btn-primary" %>
