<% unless controller.controller_name == "users" %>
  <tr id="membership-<%= membership.id %>">
    <td><span class="badge badge-primary"><%= membership.member.humanize %> </span></td>
    <td><%= membership.user.name if membership.user %></td>
    <td><%= membership.user.email if membership.user %></td>
    <td><%= membership.user.invitation_accepted_at ? "Confirmed" : "Pending" %></td>
    <td><%= membership.user.confirmed_at if membership.user.invitation_accepted_at %></td>
    <td>
        <%= link_to membership, method: :delete, remote: true,
          data: { confirm: 'Are you absolutely sure?' },
          class: "btn btn-sm btn-danger btn-link delete-membership"  do %>
          <span class="badge badge-danger"><i class="fa fa-user-times" aria-hidden="true"></i>&nbsp;Remove</span>
        <% end %>
    </td>
  </tr>
<% else %>
    <%= link_to school_path(membership.school), class: "nav-link list-group-item" do  %>
     <%= fa_icon("university fw", text: "School page") %>
    <% end %>
<% end %>
