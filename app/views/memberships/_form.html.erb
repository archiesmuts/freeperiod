<!-- from user show or membership index views -->
<%= form_with(model: [@user, @membership], local: true) do |f| %>

    <% if @membership.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(membership.errors.count, "error") %> prohibited this account from being saved:</h2>

        <ul>
          <% @membership.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :user_id, "Your name" %>
      <%= f.collection_select :user_id, User.includes(:memberships).where(memberships: {school_id: membership.school.id}).order("last_name, first_name"), :id, :name_reversed, { }, {class: "form-control", readonly: "readonly"}%>
      <%#= f.text_field :user_id, :id, :membership_user_name, {class: "form-control", readonly: "readonly"}%>
    </div>
    <div class="form-group">
      <%= f.label :school_name, "Name of your school" %>
      <%= f.text_field :school_name, id: :membership_school_name, class: "form-control", readonly: "readonly"  %>
    </div>
    <p class="font-weight-bold">Specify the role for this person .</p>
    <% Membership.members.keys.map do |member| %>
      <label class="custom-control custom-radio">
        <%= f.radio_button :member, member, class: "custom-control-input" %>
        <span class="custom-control-indicator"></span>
        <span class="custom-control-description"><%= member.humanize %></span>
      </label>
    <% end %>

    <div class="actions py-2">
      <%= link_to @membership, class: "btn btn-outline-primary" do %>
        <%= fa_icon("times", text: "Cancel") %>
      <% end %>
      <%= f.submit "Update School Registration", class: "btn btn-primary" %>
    </div>

<% end %>
