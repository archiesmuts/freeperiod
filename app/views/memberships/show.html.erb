<div class="container">
  <div class="row d-flex justify-content-md-center">
    <div class="col-md-8 p-3">
      <div class="card border-info">
        <h5 class="card-header">
          <div class="row">
            <div class="col-sm-10">
              <%= link_to  school_path(@membership.school, anchor: "school-memberships"), class: "card-link" do %>
              <%= fa_icon "chevron-left"%>&nbsp;
              <% end %>
              School registration profile
            </div>
            <div class="col-sm-2">
              <%= link_to edit_membership_path(@membership), class: "card-link" do %>
                <%= fa_icon "pencil-square" %>&nbsp;Edit
              <% end %>
            </div>
          </div>
        </h5>
        <div class="card-body text-info">
          <h4 class="card-title">
            <%= fa_icon "id-card" %>&nbsp;<%= @membership.user.name %>
            <span class="badge badge-info"> <%= @membership.member.humanize %>
          </h4>
          <h6 class="card-subtitle mb-2 text-muted">
            <%= fa_icon "university" %>&nbsp;<%= @membership.school.name if @membership.school %><br>
          </h6>
        </div>
          <div class="card-footer text-muted">
            <div class="d-flex justify-content-between">
              <small><em>Created on: <%= @membership.created_at.strftime("%d %b %Y") %></em></small>
              <small><em>Updated on: <%= @membership.updated_at.strftime("%d %b %Y") if @membership.updated_at %></em></small>
            </div>
          </div>


      </div>
    </div>
  </div>
</div>
