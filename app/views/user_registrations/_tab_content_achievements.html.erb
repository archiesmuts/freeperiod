<!-- tab_content_achievements -->
<div class="app-title" aria-label="breadcrumb">
  <div>
    <h1 class="h2"><%= fa_icon("trophy", text: "My Achievements") %></h1>
    <p>Monitor, Evaluate and Improve</p>
  </div>
  <ul class="app-breadcrumb breadcrumb">
    <li class="breadcrumb-item">
      <%= link_to school_registration_klass_path(@registration_klass.school, @registration_klass) do %>
        <%= @registration_klass.course_name %>
      <% end %>
    </li>
    <li class="breadcrumb-item active" aria-current="page">My Subject Achievements</li>
  </ul>
</div>

<div class="jumbotron">
  <div class="col-xl-10 offset-xl-1">
    <h1 class="h2">My Achievements&nbsp;
      <small><span class="badge badge-info" id="sizeAchievements1"></span></small>
    </h1>
    <p>
      Remember to celebrate both <strong>big</strong> and <strong>small</strong> achievements.
      You know when you have those <em>"Yes. I did it!"</em> moments? List all of those here.
    </p>
    <h2 class="h4 text-info">
      <%= @user_registration.registration_klass_name %>&nbsp;
    </h2>
    <h3 class="h5">
      <%= @user_registration.registration_klass.course_name %>&nbsp;
      <span class="badge badge-dark"><%= @user_registration.registration_klass.year.strftime("%Y") %></span>
    </h3>

    <hr class="my-4">
    <%= link_to new_user_registration_achievement_path(@user_registration), remote: true, class: "btn btn-lg btn-primary btn-block-xs" do %>
      <%= fa_icon("plus-square", text: "Add an Achievement") %>
    <% end %>
  </div>
</div>

<div id="list-achievements" class="d-flex flex-wrap justify-content-start align-items-stretch">
  <% if @user_registration.achievements.any? %>
    <%= render "achievements/achievements", achievable: @user_registration %>
  <% else %>
    <%= render "achievements/achievement_placeholder" %>
  <% end %>
</div>
