<%= form_with(model: [@assessment, Part.new], id: :new_part, class: :new_part) do |form| %>

  <p><strong> <%= @assessment.lesson_plan.name %>: <%= @assessment.name %></strong></p>

  <div class="errors"></div>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, id: :part_name, class: "form-control part_name", placeholder: "Give your assessment a headline title", required: true %>
  </div>

  <div class="form-group">
    <%= form.label :description, "A more complete description" %>
    <%= form.text_area :description,  id: :part_description, class: "form-control", required: true %>
  </div>

  <div class="row">
    <div class="col-sm-3">
      <div class="form-group">
        <%= form.label :value %>
          <%= form.number_field :value, id: :part_value, class: "form-control", required: true %>
        </div>
      </div>
  </div>

  <div class="modal-footer">
    <button type="button" class="btn btn-lg btn-outline-primary" data-dismiss="modal" id="createPart">
      <%= fa_icon("times", text: "Cancel") %>
    </button>
    <%= form.submit "Save question", class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
