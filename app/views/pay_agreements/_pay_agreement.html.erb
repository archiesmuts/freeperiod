<div class="col-md-4 mb-1" id="<%= dom_id(pay_agreement) %>">
  <div class="card border-info text-white bg-dark">
    <div class="card-header">
      Pay Agreement - <%= pay_agreement.fee.year.strftime("%Y") %>
    </div>
    <div class="card-body">
      <h5 class="card-title"><%= pay_agreement.user_registration.user_name %></h5>
      <h6 class="card-subtitle mb-2">
        Agreed Amount:&nbsp;
        <%= number_to_currency(pay_agreement.agreed_school_fee, precision: 2, unit: "R") %>
      </h6>
      <p class="card-text">
        Discount:&nbsp;
        <%= number_to_percentage(pay_agreement.discount_in_percent, precision: 2) %>
      </p>
      <p class="card-text">
        Approved Amount:&nbsp;
        <%= number_to_currency(pay_agreement.approved_school_fee, precision: 2, unit: "R") %>
      </p>
      <% if pay_agreement.comment %>
        <p class="card-text"><%= fa_icon "comment" %>&nbsp;<%= pay_agreement.comment %></p>
      <% else %>
        <p class="card-text"><%= fa_icon "comment-o", text: "No comment" %></p>
      <% end %>
    </div>

  <div class="card-footer">
    <div class="row">
      <div class="col-6">
        <%= link_to [pay_agreement.fee, pay_agreement], method: :delete, remote: true,
          data: { confirm: 'Deleting! Are you absolutely sure?' },
          class: "btn btn-danger delete-pay-agreement" do %>
          <%= fa_icon("trash-alt", text: "Delete", style: "regular") %>
        <% end %>
      </div>

      <div class="col-6">
        <%= link_to edit_fee_pay_agreement_path(pay_agreement.fee, pay_agreement),
          remote: true, class: "btn btn-primary btn-block" do %>
          <%= fa_icon "pencil-square", text: "Edit" %>
        <% end %>
        <%= link_to [pay_agreement.fee, pay_agreement],
          class: "btn btn-primary btn-block" do %>
          <%= fa_icon "angle-double-right", text: "Show" %>
        <% end %>
      </div>
    </div>
  </div>



  </div>
</div>
