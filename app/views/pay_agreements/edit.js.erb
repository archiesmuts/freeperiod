// Add the dialog title
$('#pay-agreement-dialog h4').html("Edit Fees Pay Agreement");

// Render the new form
$('.modal-body').html('<%= j render "pay_agreements/edit_form" %>');

// Show the dynamic dialog
$('#pay-agreement-dialog').modal("show");

// Set focus to the first element
$('#pay-agreement-dialog').on('shown.bs.modal', function () {
  $('.fee-user-registration-id').hide();
  $('.pay_agreement_discount').focus();
});
