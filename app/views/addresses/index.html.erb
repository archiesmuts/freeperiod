<div class="container">
<div class="row d-flex justify-content-center">
  <div class="col-md-8">
    <h1>Addresses</h1>

    <table class="table table-striped">
      <thead>
        <tr>
          <th>Location</th>
          <th>Address</th>

          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @addressable.addresses.each do |address| %>
          <tr>
            <td><%= address.address_type.humanize %></td>
            <td><%= address.address %></td>
            <td>
              <%= link_to 'Show more', [address.addressable, address], class: "btn btn-sm btn-info" %>&nbsp;
              <%= link_to 'Edit', edit_polymorphic_path([address.addressable, address]), class: "btn btn-sm btn-primary" %>&nbsp;
              <%= link_to 'Destroy', [address.addressable, address], method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>
    <%= link_to 'Back', polymorphic_path([@addressable]), class: "btn btn-outline-primary" %>

    <%= link_to 'Add an Address', new_polymorphic_path([@addressable, Address.new]), class: "btn btn-primary" %>
    </div>
  </div>
</div>
