<%= form_with(model: [commentable, Comment.new], id: :new_comment, class: :new_comment) do |form| %>
  <div class="errors"> </div>
  <div class="form-group">
    <%= form.label :comment, "Write a comment" %>
    <%= form.text_area :comment, id: :comment_comment, class: "form-control", placeholder: "Write a comment" %>
  </div>
  <%= form.submit "Post comment", class: "btn btn-sm btn-primary btn-block-xs" %>&nbsp;
  <%= fa_icon("paper-plane") %>
<% end %>
