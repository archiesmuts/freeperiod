// Add the dialog title
$('#action-plan-dialog h4').html("Create a Todo item");

// Render the new form
$('.modal-body').html('<%= j render "action_plans/new_todo_form" %>');

// Show the dynamic dialog
$('#action-plan-dialog').modal("show");

// Set focus to the first element
$('#action-plan-dialog').on('shown.bs.modal', function () {
  $('#action_plan_what').focus();
});
