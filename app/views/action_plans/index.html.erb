<div class="container">


  <h1>Action Plans</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Goal</th>
        <th>What</th>
        <th>Who</th>
        <th>When</th>
        <th>Priority</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @action_plans.each do |action_plan| %>
        <tr>
          <td><%= action_plan.goal_id %></td>
          <td><%= action_plan.what %></td>
          <td><%= action_plan.who %></td>
          <td><%= action_plan.when_date %></td>
          <td><%= action_plan.priority %></td>
          <td><%= link_to 'Show', action_plan %></td>
          <td><%= link_to 'Edit', edit_action_plan_path(action_plan) %></td>
          <td><%= link_to 'Destroy', action_plan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Action Plan', new_action_plan_path, class: "btn btn-primary" %>
</div>
