// Add the dialog title
$('#registration-klass-dialog h4').html("Add a class");

// Render the new form
$('.modal-body').html('<%= j render "registration_klasses/new_form" %>');

// Show the dynamic dialog
$('#registration-klass-dialog').modal("show");


// Set focus to the first element
$('#registration-klass-dialog').on('shown.bs.modal', function () {
  $('#registration_klass_course_name').focus();
  $("#registration_klass_course_name" ).autocomplete( "option", "appendTo", ".new_registration_klass" );
});
