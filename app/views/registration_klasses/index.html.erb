<div class="container pt-3">
  <h1>Registration and Subject Classes </h1>
  <div class="py-2">
    <%= link_to "School page", @school, class: "btn btn-sm btn-outline-primary" %>&nbsp;
    <%= link_to 'Create a new Registration or Subject Class', new_school_registration_klass_path(@school),
      remote: true, class: "btn btn-sm btn-primary" %>
  </div>
  <!-- TODO change subject/course looup to autocomplete search -->
  <table class="table">
    <thead>
      <tr>
        <th>Class Name</th>
        <th>Class Type</th>
        <th>Course</th>
        <th>Year</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody id="list-registration-klasses">
      <%= render @school.registration_klasses %>
    </tbody>

  </table>
</div>
<!-- modal dialog for creating registration classes -->
<%= render "modal_dialog" %>
