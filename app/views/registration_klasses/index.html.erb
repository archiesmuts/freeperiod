<div class="container pt-3">
  <h1>Registration and Subject Classes </h1>

  <div class="row">
    <div class="col-md-8">
      <div class="py-2">
        <%= link_to "Back to School page", @school, class: "btn btn-sm btn-outline-primary" %>
        <%#= link_to 'Create a new Registration or Subject Class', new_school_registration_klass_path(@school),
          remote: true, class: "btn btn-sm btn-primary" %>
      </div>
      <table class="table">
        <thead>
          <tr>
            <th>Class Name</th>
            <th>Class Type</th>
            <th>Course</th>
            <th>Year</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody id="list-registration-klasses">
          <%= render @school.registration_klasses %>
        </tbody>
      </table>
    </div>
    <div class="col-md-4">
      <div class="py-2">

      <button class="btn btn-sm btn-primary" type="button" data-toggle="collapse" data-target="#add-registration-klass-form" aria-expanded="false" aria-controls="add-membership-form">
        <%= fa_icon "graduation-cap" %> Add a subject or registration class&nbsp;
      </button>
      <br>
      <%= fa_icon "info-circle" %> This can be either a Subject class or Grade Registration class
    </div>
      <div class="collapse" id="add-registration-klass-form">
        <p><%= render "registration_klasses/new_inline_form" %></p>
      </div>
    </div>

  </div>

</div>
