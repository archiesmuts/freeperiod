<div class="mt-1">
  <nav aria-label="breadcrumb">
    <ol class="breadcrumb">
      <li class="breadcrumb-item">
        <%= link_to school_registration_klasses_path(@registration_klass.school) do %>
          <%= fa_icon "arrow-left", text: "Registration and Subject Classes Index" %>
        <% end %>
      </li>
      <li class="breadcrumb-item active">
        <a href="#"><%= @registration_klass.course_name %> - <%= @registration_klass.year.strftime("%Y") %></a>
      </li>
      <li class="breadcrumb-item active" aria-current="page">Class Goals</li>
    </ol>
  </nav>
</div>
<div class="jumbotron">
  <div class="row">
    <div class="col-12 col-xl-10 offset-xl-1">
      <h1 class="h2 text-white"><%= fa_icon("calendar-check-o", text: "Achieving Our Goals Together") %>&nbsp;<small><span class="badge badge-info" id="sizeClassGoals"></span></small></h1>
      <h2 class="h3 text-info"><%= @registration_klass.name %></h2>
      <h3 class="h4"><%= @registration_klass.course_name %> - <%= @registration_klass.year.strftime("%Y") %></h3>
      <hr>
      <%= link_to new_registration_klass_goal_path(@registration_klass), remote: true,
      class: "btn btn-lg btn-primary btn-block-xs" do %>
      <%= fa_icon("plus", text: "Add a Class Goal") %>
      <% end %>
    </div>
  </div>
</div>

<% if @registration_klass.goals.any? %>
  <div class="row d-flex" id="list-goals">
    <%= render "goals/goals", goalable: @registration_klass %>
  </div>
<% else %>
  <div class="row d-flex">
    <%= render "goals/goal_placeholder" %>
  </div>
<% end %>
